<div class="modal fade" id="modelContato" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Contato</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group row">
                        <label for="inputNome" class="col-sm-2 col-form-label">Nome</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputNome" placeholder="Nome">
                        </div>
                    </div>

                    <div class="form-group row">
                        <small id="listaInputEmail" class="col-12 form-text text-muted"> </small>
                        <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" id="inputEmail" placeholder="Email">
                        </div>
                        <div class="col-sm-3">
                            <button type="submit" class="btn btn-primary">Add+</button>
                        </div>
                    </div>

                    <div class="form-group row">
                        <small id="listaInputTel" class="col-12 form-text text-muted"> </small>
                        <label for="inputTel" class="col-sm-2 col-form-label">Telefone</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" id="inputTel" placeholder="(99) 99999-9999">
                        </div>
                        <div class="col-sm-3">
                            <button type="submit" class="btn btn-primary">Add+</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" id="btnExcluirContato" class="btn btn-danger" data-dismiss="modal">Excluir</button>
                <button type="button" class="btn btn-primary">Salvar</button>
            </div>
        </div>
    </div>
</div>